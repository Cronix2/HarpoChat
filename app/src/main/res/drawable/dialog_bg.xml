<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow très doux -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Légère ombre/halo (offset) -->
    <item android:top="3dp" android:bottom="6dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#1F000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Carte principale -->
    <item android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <!-- Dégradé subtil sombre -->
            <gradient
                android:startColor="#2A2F3A"
                android:endColor="#232732"
                android:angle="90"/>

            <corners android:radius="22dp"/>

            <!-- Fin liseré -->
            <stroke
                android:width="1dp"
                android:color="#3C4657"/>
            <!-- padding interne -->
            <padding android:left="18dp" android:top="16dp" android:right="18dp" android:bottom="14dp"/>
        </shape>
    </item>

</layer-list>
