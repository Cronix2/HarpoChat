<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Renforcez votre sécurité"
        android:textColor="@color/hc_text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Votre code de déverrouillage ou d’effacement est encore celui par défaut. Par sécurité, changez-les maintenant."
        android:textColor="@color/hc_text_secondary"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnSecondary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/dialog_btn_secondary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="16dp"
            android:text="Plus tard"
            android:textAllCaps="false"
            android:textColor="@color/dialog_btn_secondary_text"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnPrimary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/dialog_btn_primary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="16dp"
            android:text="Changer maintenant"
            android:textAllCaps="false"
            android:textColor="@color/dialog_btn_primary_text"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>
